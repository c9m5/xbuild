# Changelog:

if [ ! "$xbuild_prefix" ] ; then
    xbuild_prefix=`realpath $0`
    xbuild_prefix="${xbuild_prefix%%/bin/xbuild}"; export xbuild_prefix
fi

. ${xbuild_prefix}/lib/xbuild/config.sh


args="`getopt "d:" $*`"
if [ $? -ne 0 ] ; then
    exit 2
fi
set -- $args

while [ $# -gt 0 ] ; do
    case $1 in
        -V)
            echo "xbuild-bootstrap Version: ${xbuild_version}"
            exit 0
            ;;
        -h)
            # TODO print help
            ;;
        -d)
            install_dir="$2"
            shift; shift
            ;;
        --)
            shift; break
            ;;
        *)
            shift;;
    esac
done

: ${installdir:="${HOME}/xbuild"}

if [ ! -d "$installdir" ] ; then
    echo "[mkdir] $installdir"
    mkdir - p "$installdir"
fi

for i in config xbuild; do
    echo "[mkdir] ${installdir}/${i}"
    mkdir -p "${installdir}/${i}"
    touch "${installdir}/${i}/XBUILD_NO_PROJECT"
done

for i in scripts skel skel/mroot skel/mnt skel/config skel/img skel/scripts; do
    echo "[mkdir] ${installdir}/xbuild/${i}"
    mkdir -p "${installdir}/xbuild/${i}"
done
touch "${installdir}/xbuild/skel/XBUILD_PROJECT"

cat > "${HOME}/.xbuildrc" << __EORC__
XBUILD_ROOT="$installdir"
__EORC__

